<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado presionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" /> <!-- Bordes redondeados -->
            <solid android:color="@color/colorPrimaryDark" /> <!-- Color de fondo cuando se presiona -->

        </shape>
    </item>
    <!-- Estado predeterminado -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp" /> <!-- Bordes redondeados -->
            <solid android:color="@color/colorPrimary" /> <!-- Color de fondo predeterminado -->

        </shape>
    </item>
</selector>

