<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lightGray"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:text="Principal"
        android:textSize="24sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@android:color/transparent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/closest_beacon_button"
            android:onClick="closestBeaconTapped"
            style="@style/CustomButtonStyle"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="MÃ¡s cercano" />

        <Button
            android:id="@+id/registerButton"
            android:onClick="registerButtonTapped"
            android:text="Register"
            style="@style/CustomButtonStyle"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:visibility="visible"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <Button
            android:id="@+id/mapButton"
            android:onClick="mapButtonTapped"
            android:text="Map"
            style="@style/CustomButtonStyle"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"/> <!-- Margen a la derecha -->

        <Button
            android:id="@+id/loginButton"
            android:onClick="loginButtonTapped"
            android:text="Login"
            style="@style/CustomButtonStyle"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:visibility="visible"/>

        <Button
            android:id="@+id/logoutButton"
            android:onClick="logoutButtonTapped"
            android:text="Log out"
            style="@style/CustomButtonStyle"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/monitorizingButton"
            android:onClick="monitorizeButtonTapped"
            android:text="Monitorize"
            style="@style/CustomButtonStyle"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            />

    </LinearLayout>

</LinearLayout>
